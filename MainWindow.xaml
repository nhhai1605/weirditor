<Window x:Class="weirditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:weirditor"
        xmlns:viewModels="clr-namespace:weirditor.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="weirditor"
        Height="600"
        Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel Margin="1">
        <Menu DockPanel.Dock="Top">
            <Menu.Items>
                <MenuItem Header="File" DataContext="{Binding FileView}">
                    <MenuItem Header="New" Command="{Binding NewCommand}"/>
                    <MenuItem Header="Open" Command="{Binding OpenCommand}"/>
                    <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
                    <MenuItem Header="Save as..." Command="{Binding SaveAsCommand}"/>
                </MenuItem>
                <MenuItem Header="Setting" DataContext="{Binding EditorView}">
                    <MenuItem Header="Format" Command="{Binding FormatCommand}"/>
                </MenuItem>
            </Menu.Items>
        </Menu>
        <TextBlock DockPanel.Dock="Bottom"
                   DataContext="{Binding EditorView}"
                   Text="{Binding Editor.FilePath}" />
        <TextBox
            VerticalScrollBarVisibility="Visible"
            DataContext="{Binding EditorView}"
            FontFamily="{Binding Format.Family}"
            FontSize="{Binding Format.Size}"
            FontStyle="{Binding Format.Style}"
            FontWeight="{Binding Format.Weight}"
            TextWrapping="{Binding Format.Wrap}"
            AcceptsReturn="True"
            AcceptsTab="True"
            Text="{Binding Editor.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
</Window>