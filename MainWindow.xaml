<Window x:Class="weirditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:weirditor"
        xmlns:viewModels="clr-namespace:weirditor.ViewModels"
        xmlns:core="clr-namespace:weirditor.Core"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="weirditor"
        Height="600"
        Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>
    <DockPanel Margin="1">
        <Menu DockPanel.Dock="Top">
            <Menu.Items>
                <MenuItem Header="File" DataContext="{Binding FileView}">
                    <MenuItem Header="New" Command="{Binding NewCommand}" />
                    <MenuItem Header="Open" Command="{Binding OpenCommand}" />
                    <MenuItem Header="Save" Command="{Binding SaveCommand}" />
                    <MenuItem Header="Save as..." Command="{Binding SaveAsCommand}" />
                </MenuItem>
                <MenuItem Header="Setting" DataContext="{Binding EditorView}">
                    <MenuItem Header="Format" Command="{Binding FormatCommand}" />
                    <MenuItem Header="Word Wrap" Command="{Binding WrapCommand}" IsChecked="{Binding Format.Wrap}" IsCheckable="True" />
                </MenuItem>
            </Menu.Items>
        </Menu>
        <TextBlock DockPanel.Dock="Bottom"
                   DataContext="{Binding EditorView}"
                   Text="{Binding Editor.FilePath}" />
        <avalonEdit:TextEditor
            xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
            Name="AvalonEditor"
            FontFamily="{Binding Format.Family}"
            DataContext="{Binding EditorView}"
            FontSize="{Binding Format.Size}"
            FontStyle="{Binding Format.Style}"
            FontWeight="{Binding Format.Weight}"
            ShowLineNumbers="True"
            LineNumbersForeground="Gray"
            WordWrap="{Binding Format.Wrap}"
        >
            <i:Interaction.Behaviors>
                <core:AvalonEditorBehaviour EditorText="{Binding Editor.Text, Mode=TwoWay}"/>
            </i:Interaction.Behaviors>
        </avalonEdit:TextEditor>
    </DockPanel>
</Window>