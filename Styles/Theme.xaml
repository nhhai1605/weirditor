<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Define SolidColorBrush resources for easier use -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1b263b" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="#1b263b" />
    <SolidColorBrush x:Key="Text" Color="#e0e1dd" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0d1b2a" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981" />
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B" />
</ResourceDictionary>